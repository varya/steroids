<div ng-controller="NewCtrl">
  <div class="spinner" ng-show="loading"></div>
  <div class="content-padded">
    <h1>Add a new <%= options.className %></h1>

    <form class="simple-form">

      <label>Name:</label><br>
      <input type="text" ng-model="<%= options.name %>.name" class="topcoat-text-input three-quarters"/>

      <br><br>

      <label>Description:</label><br>
      <input type="text" ng-model="<%= options.name %>.description" class="topcoat-text-input three-quarters"/>

      <br><br>

      <a class="topcoat-button--cta full center" hm-tap="create(<%= options.name %>)">Add</a>
      <br><br>
      <a class="topcoat-button full center" hm-tap="close()">Cancel</a>
    </form>

  </div>

</div>
